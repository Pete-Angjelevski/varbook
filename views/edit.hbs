{{!-- title --}}


<form method="POST" action="/user/{{id}}/edit" >
<ul class="editForm">
{{!-- name --}}
<li>
  <label for="name">Name:</label>
    <input type="text" name="name" value="{{name}}">
</li>


{{!-- Birthday () --}}
<li>
  <label for="birthday">Birthday (month + date)</label>
  <input type="text" name="birthday" value="{{birthday}}">
</li>


{{!-- bio --}}
<li>
  <label for="bio">Short but quirky bio:</label>
  <input type="text" name="bio" value="{{bio}}">
</li>

</ul>

<button>SUBMIT!</button>
</form>